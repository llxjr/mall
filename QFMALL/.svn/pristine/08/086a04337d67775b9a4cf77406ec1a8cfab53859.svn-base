public interface ChapterDao {

    /**
     * 根据课程id获取章节列表
     * @param courseId
     * @return
     */
    List<ChapterDTO> findChaptersByCourseId(Integer courseId);

    /**
     * 根据父id获取子章节
     * @param parentId
     * @return
     */
    List<ChapterDTO> findChildChaptersByParentId(Integer parentId);

    /**
     * 根据主键获取章节
     * @param id
     * @return
     */
    ChapterDTO getChapterById(Integer id);
}
